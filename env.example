# Harem CRM - Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Security Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# Database Configuration
DATABASE_URL=your_database_connection_string
DB_POOL_SIZE=10
DB_MAX_CONNECTIONS=20

# Performance Configuration
CACHE_TTL=300
MAX_CACHE_SIZE=1000
ENABLE_CACHING=true

# Security Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
RATE_LIMIT_ENABLED=true

# Monitoring Configuration
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_LOGGING=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@haremcrm.com

# File Storage Configuration
STORAGE_BUCKET=your_storage_bucket_name
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Application Configuration
APP_NAME=Harem CRM
APP_VERSION=1.0.0
DEBUG_MODE=false
PRODUCTION_MODE=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Compliance Configuration
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true
PRIVACY_POLICY_URL=https://your-domain.com/privacy
TERMS_OF_SERVICE_URL=https://your-domain.com/terms
